---
layout: base.njk
templateClass: home
---
<div class="headerShadow">
	<section class="hero">
		<div class="heroContainer">
			<div class="intro animate__animated animate__fadeInUp">
				<h1>{{ title }}</h1>
				{{ content | safe }}
				<ul class="socialList">
					<li>
						<a href="https://www.linkedin.com/in/stefan-brechbuehl/">
							<img src="/assets/img/linkedin.svg" aria-hidden="false" alt="LinkedIn Profil" class="socialIcon" />
						</a>
					</li>
					<li>
						<a href="https://www.github.com/stebrech/">
							<img src="/assets/img/github.svg" aria-hidden="false" alt="Github Profil" class="socialIcon" />
						</a>
					</li>
					<li>
						<a href="https://mastodontech.de/@stebre">
							<img src="/assets/img/mastodon.svg" aria-hidden="false" alt="Mastodon Profil" class="socialIcon" />
						</a>
					</li>
				</ul>
			</div>
			<p class="profilePic animate__animated animate__jackInTheBox animate__delay-1s">
				{% image "src/assets/img/copy/Stefan.jpg", "Foto von mir." %}
			</p>
		</div>
		<div class="bgimage">
			{% image "src/assets/img/svg/ffflux.svg", "" %}
		</div>
	</section>
</div>
<section class="results containerL">
	<h2 class="sectionTitle">Ausgew√§hlte Arbeiten aus dem Portfolio</h2>
	<div class="grid">
		{% set results = collections.featuredProjects | reverse | limit(3) %}
		{% include "partials/preview.njk" %}
	</div>
</section>
<section class="results containerL">
	<h2 class="sectionTitle">Neuste Blogartikel</h2>
	<div class="grid">
		{% set results = collections.posts | reverse | limit(3) %}
		{% include "partials/preview.njk" %}
	</div>
</section>